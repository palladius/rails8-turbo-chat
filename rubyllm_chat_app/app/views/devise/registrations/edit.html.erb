<div class="container mx-auto mt-8 px-4 py-8 bg-gray-800 rounded-lg shadow-lg max-w-md">
  <h2 class="text-2xl font-semibold mb-6 text-gray-100">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "block text-sm font-medium text-gray-300" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :name, class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :name, autocomplete: "name", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :gemini_api_key, "Gemini API Key", class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :gemini_api_key, autocomplete: "off", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-400">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "block text-sm font-medium text-gray-300" %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
      <% if @minimum_password_length %>
        <p class="mt-2 text-sm text-gray-400"><em><%= @minimum_password_length %> characters minimum</em></p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-300" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "block text-sm font-medium text-gray-300" %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <h3 class="text-xl font-semibold mt-8 mb-4 text-gray-100">Cancel my account</h3>

  <div class="text-center">
    <p class="text-gray-300 mb-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "font-medium text-red-600 hover:text-red-500" %></p>
  </div>

  <div class="text-center mt-6">
    <%= link_to "Back", :back, class: "text-blue-400 hover:underline text-sm" %>
  </div>
</div>
