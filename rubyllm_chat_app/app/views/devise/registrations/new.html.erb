<div class="container mx-auto mt-8 px-4 py-8 bg-gray-800 rounded-lg shadow-lg max-w-md">
  <h2 class="text-2xl font-semibold mb-6 text-gray-100">âœ¨ Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "block text-sm font-medium text-gray-300" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-sm border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :name, class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :name, autocomplete: "name", class: "mt-1 block w-full rounded-sm border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :gemini_api_key, "Gemini API Key", class: "block text-sm font-medium text-gray-300" %>
      <%= f.text_field :gemini_api_key, autocomplete: "off", class: "mt-1 block w-full rounded-sm border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-sm font-medium text-gray-300" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-sm border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-300" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-sm border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-sm shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
