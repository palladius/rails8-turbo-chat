<div class="container mx-auto mt-8 px-4 py-8 bg-gray-800 rounded-lg shadow-lg max-w-md">
  <h2 class="text-2xl font-semibold mb-6 text-gray-100">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "block text-sm font-medium text-gray-300" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-sm font-medium text-gray-300" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-gray-700 text-gray-100 placeholder-gray-400" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-600 rounded bg-gray-700" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-300" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>